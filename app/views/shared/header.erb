<header class="header">
  <div class="container">
    <% if signed_in? %>
      <nav class="nav">
        <div class="nav-logo">
          <a href="/"><img src="/img/logo.png" alt="timgialinhkien"></a>
        </div>
        <div class="nav-control">
          <div class="nav-control-item"><a href="/builds"><%= I18n.t('views.builds') %></a></div>
          <div class="menu"><img src="<%= current_user.avatar_url %>" alt="<%= current_user.short_username %>"></div>
        </div>
      </nav>
      <ul class="nav-dropdown">
        <li><a href="/builds"><%= I18n.t('views.builds') %></a></li>
        <li><a href="/<%= current_user.username %>"><%= I18n.t('views.profile_page') %></a></li>
        <li><a href="/settings"><%= I18n.t('views.settings') %></a></li>
        <li><form method="post" action="/sign_out"><button type="submit" class="link-sign-out"><%= I18n.t('views.sign_out_btn') %></button></form></li>
      </ul>
    <% else %>
      <nav class="nav">
        <div class="nav-logo">
          <a href="/"><img src="/img/logo.png" alt="timgialinhkien"></a>
        </div>
        <div class="nav-control">
          <div class="nav-control-item"><a href="/builds"><%= I18n.t('views.builds') %></a></div>
          <div class="nav-control-item"><a href="/sign_in" class="btn btn-gray"><%= I18n.t('views.sign_in_btn') %></a></div>
          <div class="nav-control-item"><a href="/sign_up" class="btn"><%= I18n.t('views.sign_up_btn') %></a></div>
          <div class="menu hidden-pc"><img src="/img/menu.svg" alt="menu"></div>
        </div>
      </nav>

      <ul class="nav-dropdown">
        <li><a href="/builds"><%= I18n.t('views.builds') %></a></li>
        <li><a href="/sign_in"><%= I18n.t('views.sign_in_btn') %></a></li>
        <li><a href="/sign_up"><%= I18n.t('views.sign_up_btn') %></a></li>
      </ul>
    <% end %>
  </div>
</header>
