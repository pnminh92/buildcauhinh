<header class="header">
  <div class="container">
    <% if signed_in? %>
      <nav class="nav">
        <div class="nav-logo">
          <a href="/"><img src="<%= ASSETS['logo.png'] %>" alt="buildcauhinh"></a>
        </div>
        <div class="nav-control">
          <div class="nav-control-item"><a href="/builds"><%= I18n.t('views.builds') %></a></div>
          <div class="menu"><img src="<%= current_user.eco_img_url %>" alt="<%= current_user.username %>"></div>
        </div>
      </nav>
      <ul class="nav-dropdown">
        <li><a href="/builds"><%= I18n.t('views.builds') %></a></li>
        <li><a href="/@<%= current_user.username %>"><%= I18n.t('views.profile_page') %></a></li>
        <li><a href="/settings"><%= I18n.t('views.settings') %></a></li>
        <li>
          <form method="post" action="/sign_out">
            <input type="hidden" name="authenticity_token" value="<%= session[:csrf] %>">
            <button type="submit" class="link-sign-out"><%= I18n.t('views.sign_out_btn') %></button>
          </form>
        </li>
      </ul>
    <% else %>
      <nav class="nav">
        <div class="nav-logo">
          <a href="/"><img src="<%= ASSETS['logo.png'] %>" alt="buildcauhinh"></a>
        </div>
        <div class="nav-control">
          <div class="nav-control-item"><a href="/builds"><%= I18n.t('views.builds') %></a></div>
          <div class="nav-control-item"><a href="/sign_in" class="btn btn-gray"><%= I18n.t('views.sign_in_btn') %></a></div>
          <div class="nav-control-item"><a href="/sign_up" class="btn"><%= I18n.t('views.sign_up_btn') %></a></div>
          <div class="menu hidden-pc"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-menu"><line x1="3" y1="12" x2="21" y2="12"></line><line x1="3" y1="6" x2="21" y2="6"></line><line x1="3" y1="18" x2="21" y2="18"></line></svg></div>
        </div>
      </nav>

      <ul class="nav-dropdown">
        <li><a href="/builds"><%= I18n.t('views.builds') %></a></li>
        <li><a href="/sign_in"><%= I18n.t('views.sign_in_btn') %></a></li>
        <li><a href="/sign_up"><%= I18n.t('views.sign_up_btn') %></a></li>
      </ul>
    <% end %>
  </div>
</header>
