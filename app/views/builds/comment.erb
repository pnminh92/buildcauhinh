<div class="media comment-item">
  <div class="media-left">
    <% if comment.user.avatar_url %>
    <img src="<%= comment.user.avatar_url %>" alt="<%= comment.user.short_username %>">
    <% else %>
    <img src="/img/avatar.png" alt="Ảnh đại diện của wofiminh">
    <% end %>
  </div>
  <div class="media-body">
    <div class="comment-info">
      <a href="/<%= comment.user.username %>" class="media-username"><%= comment.user.short_username %></a>
      <time class="media-date"><%= comment.created_at %></time>
      <span onclick="Timgialinhkien.openCommentEditor(this, <%= comment.id %>, <%= comment.build_id %>)"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit-2"><polygon points="16 3 21 8 8 21 3 21 3 16 16 3"></polygon></svg></span>
      <span onclick="Timgialinhkien.deleteComment(this, <%= comment.id %>, <%= comment.build_id %>)"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-trash"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path></svg></span>
    </div>
    <p class="comment-content"><%= comment.content %></p>
  </div>
</div>
