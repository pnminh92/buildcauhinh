    })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-110209736-1', 'auto');
    ga('send', 'pageview');
    </script>
  </head>
  <body>
    <%= erb :'shared/header' %>
    <%= yield %>
    <%= erb :'shared/footer' %>
    <%= erb :'shared/builder' %>
    <%= erb(:'shared/flash', locals: { message: yield_content(:success), success: true }) if content_for?(:success) %>
    <%= erb(:'shared/flash', locals: { message: yield_content(:error), success: false }) if content_for?(:error) %>
  </body>
</html>
