<!doctype html>
<html lang="vi">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="format-detection" content="telephone=no">

    <title><%= yield_content(:title) { 'Build cấu hình máy tính - buildcauhinh' } %></title>
    <meta name="description" content="<%= yield_content(:description) { 'Cộng đồng build, chia sẻ cấu hình máy tính' } %>">

    <link rel="canonical" href="<%= yield_content(:canonical) { to('/') } %>">

    <meta property="og:title" content="<%= yield_content(:og_title) { 'Build cấu hình máy tính - buildcauhinh' } %>">
    <meta property="og:site_name" content="<%= yield_content(:og_site_name) { 'Build cấu hình máy tính - buildcauhinh' } %>">
    <meta property="og:description" content="<%= yield_content(:og_description) { 'Cộng đồng build, chia sẻ cấu hình máy tính' } %>">
    <meta property="og:url" content="<%= yield_content(:og_url) { to('/') } %>">
    <meta property="og:image" content="<%= yield_content(:og_image) { to(ASSETS['og.png']) } %>">
    <meta property="og:type" content="website">

    <link rel="shortcut icon" type="image/x-icon" href="<%= ASSETS['favicon_16x16.png'] %>">
    <link rel="apple-touch-icon" sizes="180x180" href="<%= ASSETS['touch_icon_180x180.png'] %>">
    <link rel="apple-touch-icon" sizes="152x152" href="<%= ASSETS['touch_icon_152x152.png'] %>">
    <link rel="apple-touch-icon" sizes="120x120" href="<%= ASSETS['touch_icon_120x120.png'] %>">
    <link rel="apple-touch-icon" sizes="76x76" href="<%= ASSETS['touch_icon_76x76.png'] %>">
    <link rel="icon" sizes="192x192" href="<%= ASSETS['touch_icon_192x192.png'] %>">

    <link rel="stylesheet" href="<%= ASSETS['main.css'] %>">
    <script src="<%= ASSETS['main.js'] %>" defer></script>
  </head>
  <body>
    <header class="header-simple">
      <div class="container">
        <a href="/"><img src="<%= ASSETS['logo.png'] %>" alt="Logo cua buildcauhinh"></a>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
