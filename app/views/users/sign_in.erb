<main class="contents">
  <div class="form-wrapper">
    <h1 class="title text-center"><%= I18n.t('views.sign_in') %></h1>
    <% if @error %>
      <p><%= @error %></p>
    <% end %>
    <form class="form" action="/sign_in" method="POST">
      <div class="form-group">
        <label class="form-label" for=""><%= I18n.t('views.username') %></label>
        <input name="username" class="input form-input" type="text">
      </div>
      <div class="form-group">
        <label class="form-label" for=""><%= I18n.t('views.password') %></label>
        <input name="password" class="input form-input" type="password">
      </div>
      <div class="form-group">
        <label class="form-label"></label>
        <input class="btn" type="submit" value="<%= I18n.t('views.sign_in_btn') %>">
      </div>
    </form>
  </div>
</main>
