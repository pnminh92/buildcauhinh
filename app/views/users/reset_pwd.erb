<main class="contents">
  <div class="form-wrapper">
    <h1 class="title text-center"><%= I18n.t('views.reset_pwd') %></h1>
    <form class="form" action="/reset_pwd" method="post">
      <input name="reset_pwd_token" type="hidden" value="<%= @token %>">
      <div class="form-group">
        <label class="form-label" for=""><%= I18n.t('views.new_password') %></label>
        <input name="password" class="input form-input" type="password">
      </div>
      <div class="form-group">
        <label class="form-label"></label>
        <input class="btn" type="submit" value="<%= I18n.t('views.change_pwd_btn') %>">
      </div>
    </form>
  </div>
</main>
