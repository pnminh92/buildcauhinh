<main class="contents">
  <div class="container">
    <div class="flexbox flexbox-main">
      <div class="main-content">
        <h1 class="title"><%= I18n.t('views.profile') %></h1>
        <form class="form" action="/settings" method="post" enctype="multipart/form-data">
          <div class="form-group">
            <label class="form-label" for=""><img src="/img/avatar.png" alt="<%= @user.short_username %>"></label>
            <input class="input form-input" type="file">
          </div>
          <div class="form-group">
            <label class="form-label" for=""><%= I18n.t('views.username') %></label>
            <input name="username" class="input form-input" type="text" value="<%= @user.short_username %>">
          </div>
          <div class="form-group">
            <label class="form-label" for=""><%= I18n.t('views.email') %></label>
            <input name="email" class="input form-input" type="text" value="<%= @user.email %>">
          </div>
          <div class="form-group">
            <label class="form-label" for=""><%= I18n.t('views.about') %></label>
            <textarea name="about" class="textarea form-input"><%= @user.about %></textarea>
          </div>
          <div class="form-group">
            <label class="form-label"></label>
            <input class="btn" type="submit" value="<%= I18n.t('views.edit_btn') %>">
          </div>
        </form>
      </div>

      <aside class="sidebar">
        <ul class="list">
          <li><a class="active" href="/settings"><%= I18n.t('views.settings') %></a></li>
          <li><a href="/settings/change_pwd"><%= I18n.t('views.change_pwd_label') %></a></li>
        </ul>
      </aside>
    </div>
  </div>
</main>
