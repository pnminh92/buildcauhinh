<main class="contents">
  <div class="form-wrapper">
    <h1 class="title text-center"><%= I18n.t('views.sign_up') %></h1>
    <form class="form" action="/sign_up" method="post">
      <div class="form-group">
        <label class="form-label" for=""><%= I18n.t('views.username') %></label>
        <input name="username" class="input form-input" type="text" value="<%= @user&.short_username %>">
        <p class="text-error"><%= @errors&.full_messages_for(:user, :username)&.first %></p>
      </div>
      <div class="form-group">
        <label class="form-label" for=""><%= I18n.t('views.password') %></label>
        <input name="password" class="input form-input" type="password">
        <p class="text-error"><%= @errors&.full_messages_for(:user, :password)&.first %></p>
      </div>
      <div class="form-group">
        <label class="form-label"></label>
        <input class="btn" type="submit" value="<%= I18n.t('views.sign_up_btn') %>">
      </div>
    </form>
  </div>
</main>
