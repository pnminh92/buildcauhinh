<main class="contents">
  <div class="container">
    <div class="flexbox flexbox-main">
      <div class="main-content">
        <div class="box">
          <h1 class="title"><%= I18n.t('views.change_pwd') %></h1>
          <form class="form" action="/settings/change_pwd" method="post">
            <input type="hidden" name="authenticity_token" value="<%= Rack::Protection::AuthenticityToken.token(session) %>">
            <div class="form-group">
              <label class="form-label" for=""><%= I18n.t('views.current_password') %></label>
              <div class="form-input">
                <input name="current_password" class="input" type="password">
                <%= single_text_error(@error) %>
              </div>
            </div>

            <div class="form-group">
              <label class="form-label" for=""><%= I18n.t('views.new_password') %></label>
              <div class="form-input">
                <input name="password" class="input" type="password">
                <%= model_text_error(@errors, :user, :password) %>
              </div>
            </div>
            <div class="form-group">
              <label class="form-label"></label>
              <input class="btn" type="submit" value="<%= I18n.t('views.change_pwd_btn') %>">
            </div>
          </form>
        </div>
      </div>

      <aside class="sidebar">
        <ul class="list">
          <li><a href="/settings"><%= I18n.t('views.settings') %></a></li>
          <li><a class="active" href="/settings/change_pwd"><%= I18n.t('views.change_pwd_label') %></a></li>
        </ul>
      </aside>
    </div>
  </div>
</main>

<% if flash[:success] %>
  <% content_for(:success) do %>
    <%= flash[:success] %>
  <% end %>
<% end %>
